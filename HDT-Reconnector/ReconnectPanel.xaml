<UserControl x:Class="HDT_Reconnector.ReconnectPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HDT_Reconnector"
             mc:Ignorable="d" 
             >
    <Grid>
        <Border x:Name="ReconnectButton"
                BorderBrush="#141617"
                BorderThickness="2"
                Background="#23272a"
                Height="40" Width="140"
                Cursor="Hand"
                MouseEnter="ReconnectButton_MouseEnter" MouseLeave="ReconnectButton_MouseLeave" MouseDown="ReconnectButton_Click">
            <local:OutlinedTextBlock x:Name="ReconnectText" 
                                     Text="Reconnect" 
                                     TextAlignment="Center"
                                     FontFamily="/HDT-Reconnector;component/Resources/#Chunkfive"
                                     FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

    </Grid>
</UserControl>
